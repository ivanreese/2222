0 VALUE WORDS-FD
32 CONSTANT WORD-SIZE
CREATE WORD-BUF WORD-SIZE 2 + ALLOT

: OPEN-WORDS ( -- )
  S" 2222.txt" R/O OPEN-FILE THROW 
  TO WORDS-FD
;

: CLOSE-WORDS ( -- )
  WORDS-FD CLOSE-FILE THROW
;

: READ-WORD ( -- c-addr u flag )
  WORD-BUF DUP WORD-SIZE WORDS-FD READ-LINE THROW
;

: WAIT ( -- )
  604 MS 
;

: PLAY ( -- )
  OPEN-WORDS
  BEGIN 
    READ-WORD 
  WHILE 
    TYPE CR
    WAIT 
  REPEAT 2DROP
  CLOSE-WORDS
;

PLAY
